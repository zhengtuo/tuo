<resources>


    <style name="TitleTextView">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_0</item>
    </style>

    <style name="ContentTextView">
        <item name="android:textColor">@color/color_3</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="MarginLeftAndRight25">
        <item name="android:layout_marginStart">@dimen/dp_25</item>
        <item name="android:layout_marginEnd">@dimen/dp_25</item>
    </style>

    <style name="LoginLinearLayout" parent="MarginLeftAndRight25">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
