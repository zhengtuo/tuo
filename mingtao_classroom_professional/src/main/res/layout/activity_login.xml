<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.mingtao.professionedu.ui.system.viewmodel.MTPLoginVM" />

        <import type="com.mingtao.professionedu.data.constants.drawabledsl.DrawableDslManager" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f"
        app:statusBarDarkFont="@{false}">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_49"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/mtp_black_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:gravity="center"
            android:text="@string/skip"
            android:textColor="@color/color_47A3FF"
            android:textSize="@dimen/sp_13"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/mtp_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_44"
            android:src="@mipmap/mtp_login_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_back"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/mtp_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@null"
            android:hint="@string/place_input_phone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="11"
            android:paddingTop="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_5"
            android:text=""
            android:textSize="@dimen/sp_15"
            app:layout_constraintTop_toBottomOf="@+id/mtp_iv_logo"
            tools:ignore="TextFields" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="@color/color_e"
            app:layout_constraintTop_toBottomOf="@id/mtp_et_phone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:src="@mipmap/mtp_clear_phone"
            app:layout_constraintBottom_toBottomOf="@+id/mtp_et_phone"
            app:layout_constraintEnd_toEndOf="@+id/mtp_et_phone"
            app:layout_constraintTop_toTopOf="@+id/mtp_et_phone" />

        <EditText
            android:id="@+id/mtp_et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@null"
            android:hint="@string/place_input_code"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="11"
            android:paddingTop="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_5"
            android:textSize="@dimen/sp_15"
            app:layout_constraintTop_toBottomOf="@+id/mtp_et_phone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="@color/color_e"
            app:layout_constraintTop_toBottomOf="@id/mtp_et_code" />

        <TextView
            android:id="@+id/mtp_tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingTop="5dp"

            android:paddingBottom="5dp"
            android:text="@string/get_code"
            android:textColor="@{vm.phoneText.length()==11?@color/color_47A3FF:@color/color_c}"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="@+id/mtp_et_code"
            app:layout_constraintEnd_toEndOf="@+id/mtp_et_code"
            app:layout_constraintTop_toTopOf="@+id/mtp_et_code" />


        <TextView
            android:id="@+id/mtp_tv_login"
            style="@style/MarginLeftAndRight30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@{vm.canLoginOrRegister()?DrawableDslManager.login_text_check:DrawableDslManager.login_text_normal}"
            android:gravity="center"
            android:text="@string/login_and_register"
            android:textColor="@{vm.canLoginOrRegister?@color/color_f:@color/color_b}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mtp_et_code" />


        <TextView
            android:id="@+id/mtp_tv_login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="19dp"

            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp"
            android:text="@string/password_login"
            android:textColor="@color/color_47A3FF"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mtp_tv_login" />

        <ImageView
            android:id="@+id/mtp_iv_qq_login"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/mtp_qq_login"
            app:layout_constraintEnd_toStartOf="@+id/mtp_iv_wechat_login"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/mtp_iv_wechat_login"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="28dp"
            android:src="@mipmap/mtp_wechat_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/mtp_iv_qq_login"
            app:layout_constraintTop_toTopOf="@id/mtp_iv_qq_login"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="第三方账号快捷登录"
            android:textColor="@color/color_b"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mtp_tv_login_password"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/cb_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={vm.checked}"
            android:paddingStart="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_0"
            android:text="@string/read_and_agree"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/mtp_tv_service_agreement"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/mtp_tv_service_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:text="@string/service_agreement"
            android:textColor="@color/color_47A3FF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mtp_tv_symbol"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/mtp_tv_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_sign"
            android:textColor="@color/color_b"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/mtp_tv_service_agreement"
            app:layout_constraintEnd_toStartOf="@+id/mtp_tv_buy_agreement"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/mtp_tv_service_agreement" />

        <TextView
            android:id="@+id/mtp_tv_buy_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy_agreement"
            android:textColor="@color/color_47A3FF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/mtp_tv_service_agreement"
            app:layout_constraintEnd_toStartOf="@id/mtp_tv_symbol2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/mtp_tv_symbol" />

        <TextView
            android:id="@+id/mtp_tv_symbol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_sign"
            android:textColor="@color/color_b"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/mtp_tv_service_agreement"
            app:layout_constraintEnd_toStartOf="@+id/mtp_tv_conceal_agreement"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/mtp_tv_buy_agreement" />

        <TextView
            android:id="@+id/mtp_tv_conceal_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/conceal_agreement"
            android:textColor="@color/color_47A3FF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/mtp_tv_service_agreement"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/mtp_tv_symbol2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>