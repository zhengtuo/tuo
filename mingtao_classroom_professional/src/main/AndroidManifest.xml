<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mingtao.professionedu">

    <!--允许程序访问网络-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许程序获取网络信息状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="app.MTPApp"
        android:allowBackup="true"
        android:icon="@mipmap/mtp_launcher"
        android:label="@string/mtp_app_name"
        android:supportsRtl="true"
        android:theme="@style/mtp_Theme.Tuo">
        <activity
            android:name=".ui.compose.system.view.MTPCSplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.compose.login.view.MTPCLoginActivity" />
        <activity android:name=".ui.compose.login.view.MTPCPasswordLoginActivity" />
        <activity android:name=".ui.compose.main.view.MTPCMainActivity" />
        <activity android:name=".ui.compose.login.view.MTPCFindPasswordActivity" />
    </application>

</manifest>