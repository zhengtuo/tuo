<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.zheng.lib.R" />

        <import type="android.view.View" />

        <import type="com.zheng.lib.binding.listener.CommonBinding" />

        <variable
            name="utils"
            type="com.zheng.lib.utils.LibUtils" />

        <variable
            name="backgroundColor"
            type="Integer" />

        <variable
            name="elevation"
            type="Integer" />

        <variable
            name="Icon"
            type="Integer" />

        <variable
            name="hideIcon"
            type="boolean" />

        <variable
            name="title"
            type="String" />

        <variable
            name="titleColor"
            type="Integer" />

        <variable
            name="titleSize"
            type="Integer" />

        <variable
            name="textStyle"
            type="String" />

        <variable
            name="statusBarHeight"
            type="Boolean" />

        <variable
            name="statusBarDarkMode"
            type="Boolean" />

        <variable
            name="hideLine"
            type="Boolean" />

        <variable
            name="leftCommand"
            type="com.zheng.lib.binding.listener.BindingClickT" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{backgroundColor ?? @color/color_f}"
        android:elevation="@{elevation ?? 0}"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_horizontal"
            app:icon="@{hideIcon ? null : Icon != null ? Icon : R.mipmap.ic_back_arrow}"
            app:onNavigationClick="@{(view) -> leftCommand != null ? leftCommand.click(view) : CommonBinding.backCommand.click(view)}">

            <TextView
                android:id="@+id/txt_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@{title}"
                android:textColor="@{titleColor ?? @color/color_3}"
                android:textStyle="bold"
                app:size="@{titleSize ??14}" />

        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/color_d"
            app:isVisible="@{!hideLine}" />

    </LinearLayout>

</layout>